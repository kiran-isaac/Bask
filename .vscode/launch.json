  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "CodeLLDB GTest",
      "program": "${workspaceFolder}/build/KLTest",
      "args": [],
      "preLaunchTask": "build with make",
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb-dap",
      "request": "launch",
      "name": "LLDB GTest",
      "program": "${workspaceFolder}/build/KLTest",
      "args": [],
      "preLaunchTask": "build with make",
      "cwd": "${workspaceFolder}"
    },

    {
      "name": "build and debug gtests",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/KLTest",
      "args": ["--gtest_filter=\"Const.Float\""],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "preLaunchTask": "build with make",
      "setupCommands": [
          {
              "description": "Enable pretty-printing for gdb",
              "text": "-enable-pretty-printing",
              "ignoreFailures": true
          },
          {
              "description": "Set Disassembly Flavor to Intel",
              "text": "-gdb-set disassembly-flavor intel",
              "ignoreFailures": true
          }
      ]
    }

  ]
}